<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false"><shape android:shape="rectangle">
            <solid android:color="#ffffffff" />

            <stroke android:width="1px" android:color="#ffdddddd" />
        </shape></item>
    <item android:state_checked="true"><layer-list>
            <item android:bottom="1px" android:left="1px" android:right="1px" android:top="1px"><shape android:shape="rectangle">
                    <solid android:color="#ffffffff" />

                    <stroke android:width="1px" android:color="#ffdddddd" />
                </shape></item>
            <item android:drawable="@drawable/ic_crossed_samll"></item>
        </layer-list></item>

</selector>