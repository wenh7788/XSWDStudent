<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 按下状态 -->  
    <item android:state_pressed="true" >  
        <shape>  
            <stroke
                android:width="1dp"
                android:color="#f78642"
                />  
            <solid  
                android:color="#f0e2bd" /> 
        </shape>  
    </item>  
    <item android:state_focused="true" >  
        <shape>  
            <solid   
                android:color="#f0e2bd" /> 
        </shape>  
    </item> 
    <!-- 普通状态 -->  
    <item>  
        <shape android:shape="rectangle">  
            <stroke
                android:width="1dp"
                android:color="#f78642"
                />          
            <padding   
                android:bottom="10dp"   
                android:left="30dp"   
                android:right="30dp"   
                android:top="10dp" />  
        </shape>  
     </item>  
</selector>
