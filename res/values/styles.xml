<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 大部分页面都可能会用到的1dp的分割线 -->
    <style name="dicator_line_1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#eee</item>
    </style>
    
    <style name="common_title_IV_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:background">@drawable/ic_back</item>
    </style>
    <style name="common_title_TV_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="common_title_TV_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/ic_but_bg</item>
        <item name="android:layout_marginRight">7dp</item>
    </style> 
    
	<style name="dialogstyle">  
        <item name="android:windowBackground">@android:color/transparent</item>  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowIsTranslucent">true</item>  
        <item name="android:windowContentOverlay">@null</item>   
        <item name="android:backgroundDimEnabled">true</item>  
		<item name="android:windowFullscreen">true</item>  
	</style>
	<!-- 星星评价样式——sm -->
    <style name="custRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_layerlist</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>
 	<!-- 星星评价样式 ——md-->
    <style name="custRatingBarMD" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_md_layerlist</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>   
    <!-- 小星星 -->
    <style name="ratingbarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rb_drawable_style</item>  
        <item name="android:minHeight">48dip</item>  
        <item name="android:maxHeight">48dip</item>  
    </style>
    
    
        <style name="ratingbarStylelt" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rb_drawable_style</item>  
        <item name="android:minHeight">5dip</item>  
        <item name="android:maxHeight">5dip</item>  
    </style>
</resources>
