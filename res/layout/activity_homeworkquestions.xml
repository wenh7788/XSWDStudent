<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff"
    >
    
    <include
        android:id="@+id/base_top"
        layout="@layout/activity_base_top"
        />
    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:orientation="vertical"
	    android:background="#fff"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"	    	    
	    >
		<TextView 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:text="选择科目"
		    android:textColor="#5e5e5e"
		    android:drawableRight="@drawable/arraw_right"
		    android:gravity="center|left"
		    />
	</LinearLayout>
	<!-- 1_分割线 -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#f7f7f7"
        />
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="10dp"
	    android:background="#fff"
	    >
	    <EditText 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/edit_bg_corner_shape"
	        android:hint="标题描述"
	        android:textSize="12sp"
	        android:padding="10dp"
	        />
	    
	    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:background="#fff"
		    android:layout_marginTop="15dp"
	         >
	        <EditText 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="3"
				android:background="@drawable/edit_bg_corner_shape"
	            android:hint="文字描述..."
	            android:lines="5"
	            android:textSize="12sp"
	            android:layout_marginRight="10dp"
	            android:gravity="top"
	            />
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="2"
	            android:orientation="vertical"
	            android:gravity="center"
	            android:background="#e6e6e6"
	            android:id="@+id/llayoutcamera"
	            >
		        <ImageView 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
		            android:background="#e6e6e6"
		            android:src="@drawable/img_upload"
		            /> 
	        </LinearLayout>

	    </LinearLayout>
	</LinearLayout>
    <LinearLayout	       
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
		<ImageView
		    android:id="@+id/imgquestionpic1" 
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
			android:src="@drawable/defaulticon"
		    />
		<ImageView
		    android:id="@+id/imgquestionpic2" 
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
			android:src="@drawable/defaulticon"

		    />	
		<ImageView
		    android:id="@+id/imgquestionpic3" 
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
			android:src="@drawable/defaulticon"

		    />	
		<ImageView
		    android:id="@+id/imgquestionpic4" 
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
			android:src="@drawable/defaulticon"

		    />			    				    		
    </LinearLayout>	
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="horizontal"
	    android:gravity="bottom"
	    android:layout_gravity="bottom"
	    >
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:text="2015-07-24 20:48"
	        android:textColor="#ebebeb"
	        android:background="#49b2f3"	
	        android:gravity="center"
	        android:padding="15dp"	                
	        />
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:text="提交作业"
	        android:textColor="#fff"
	        android:background="#f78642"
	        android:gravity="center"
	        android:padding="15dp"
	        />	    
	</LinearLayout>
</LinearLayout>
