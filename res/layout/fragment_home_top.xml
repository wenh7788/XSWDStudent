<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:background="#f78642"
	    android:orientation="horizontal"
	    >
	    <TextView 
	        android:id="@+id/txtcity"
	        android:layout_height="fill_parent"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:text="城市"
	        android:textColor="#fff"
	        android:gravity="center"
	        android:drawableRight="@drawable/home_top_down"
	        />

	    <EditText
	        android:id="@+id/edtsearch"
	        android:layout_width="0dp"
	        android:layout_height="30dp"
	        android:layout_gravity="center_vertical"
	        android:layout_margin="0dp"
	        android:layout_weight="3"
	        android:hint="搜索您想学的课程..."
	        android:singleLine="true"
	        android:textColor="#f78642"
	        android:textColorHint="#f78642"
	        android:textSize="10sp" 
	        android:paddingLeft="15dp"
	        android:background="@drawable/editview_shape"
	        />

	    <ImageView 
	        android:id="@+id/imgsearch"
	        android:layout_height="fill_parent"
	        android:layout_width="0dp"
	        android:layout_weight="0.5"
	        android:src="@drawable/home_top_search"
	        />
	</LinearLayout>
</LinearLayout>
