<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff"
    >
    
    <include
        android:id="@+id/activity_teacherdetails_top"
        layout="@layout/activity_teacherdetails_top"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView 
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/defaulticon"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                />
	  		<RatingBar
		        android:id="@+id/rbarjudge"
		        style="@style/custRatingBar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
		        android:numStars="5"
		        android:rating="4">
		 	</RatingBar>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            >
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txtteachername" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三啊啊"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
                <TextView 
                    android:id="@+id/txtsex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textColor="#999"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/woman"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    />                
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"   
                android:layout_weight="1"             
                >
               <TextView
                    android:id="@+id/txtauth" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="三项权威认证"
                    android:textColor="#F78642"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/authentication_sel"
                    android:layout_gravity="center"
                    />
                <TextView 
                    android:id="@+id/txtage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4年教龄"
                    android:textColor="#49B2F3"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    />      
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <TextView 
                    android:id="@+id/txtintroduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学英语就找我，英语提升达人"
                    android:textColor="#5e5e5e"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    />  
            </LinearLayout>            
        </LinearLayout>        
    </LinearLayout>
	<TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="10dp"
	    android:background="#ebebeb"
	    />
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >

        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
			<TextView 
			    android:id="@+id/txtjj"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:text="简介"
			    android:drawableLeft="@drawable/tjj_sel"
			    android:gravity="center"
			    android:padding="20dp"
			    android:textColor="#f78642"
			    android:textSize="16sp"
			    />
			<TextView 
			    android:id="@+id/txtjj_line"
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:background="#f78642"
			    />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
			<TextView 
			    android:id="@+id/txtkc"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:text="课程"
			    android:drawableLeft="@drawable/tkc_nor"
			    android:gravity="center"
			    android:padding="20dp"
			    android:textColor="#e4e4e4"
			    android:textSize="16sp"
			    />
			<TextView 
			    android:id="@+id/txtkc_line"
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:background="#fff"
			    />
        </LinearLayout>                
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
			<TextView 
			    android:id="@+id/txtpj"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:text="评价"
			    android:drawableLeft="@drawable/tpj_nor"
			    android:gravity="center"
			    android:padding="20dp"
			    android:textColor="#e4e4e4"
			    android:textSize="16sp"
			    />
			<TextView 
			    android:id="@+id/txtpj_line"
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:background="#fff"
			    /> 
            
        </LinearLayout>
	</LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager_teacherdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
</LinearLayout>
