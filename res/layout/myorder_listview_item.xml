<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!-- 课程图片 -->
        <ImageView 
            android:id="@+id/img_course"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_course"/>
        
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_course"
            android:layout_marginLeft="8dp">
            <TextView 
                android:id="@+id/txt_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="初中英语名校提前考试"
                android:textSize="@dimen/my_order_class_font_size_13"/>
            
            <TextView 
                android:id="@+id/txt_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="李欣"
                android:textSize="@dimen/my_order_class_font_size_12"
                android:layout_below="@id/txt_course_name"
                android:layout_marginTop="3dp"/>
            
            <TextView 
                android:id="@+id/txt_authen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txt_teacher_name"
                android:layout_toRightOf="@id/txt_teacher_name"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/img_authen"
                android:text="3项认证"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"/>
            
            <TextView 
                android:id="@+id/txt_tec_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignBottom="@id/txt_teacher_name"
                android:layout_toRightOf="@id/txt_authen"
                android:layout_marginLeft="5dp"
                android:text="一对一"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/txt_bg_corner_shape"/>
        </RelativeLayout>
        
        <ImageView 
            android:id="@+id/img_erweima"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_erweima"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- 上课方式 -->
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课方式："
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/my_order_class_font_size_12"/>
            <TextView 
                android:id="@+id/txt_start_class_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="老师上门"
                android:textSize="@dimen/my_order_class_font_size_12"/>
            <TextView 
                android:id="@+id/txt_class_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥400.00"
                android:textSize="@dimen/my_order_class_font_size_12"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        
        <!-- 上课地点 -->
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课地点："
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/my_order_class_font_size_12"/>
            <TextView 
                android:id="@+id/txt_start_class_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="武汉市江汉区江汉路118号12A栋108室"
                android:textSize="@dimen/my_order_class_font_size_12"/>
        </LinearLayout>
        
        <!-- 上课时间 -->
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课时间："
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/my_order_class_font_size_12"/>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView 
                android:id="@+id/txt_start_class_time_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-07-05 18:00-19:00(1课时)"
                android:textSize="@dimen/my_order_class_font_size_12"/>
            <TextView 
                android:id="@+id/txt_start_class_time_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-07-08 17:00-19:00(2课时)"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/my_order_class_font_size_12"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-06-16 13:01"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/my_order_class_font_size_13" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/txt_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="@dimen/my_order_class_font_size_13"
                android:textColor="@color/orange"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="总价:"
                android:textSize="@dimen/my_order_class_font_size_13"
                android:textColor="@color/dark_gray"/>
            <TextView 
                android:id="@+id/txt_order_sum_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="¥400.00"
                android:textColor="@color/blue"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/btn_cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="取消订单"
            android:textSize="@dimen/my_order_class_font_size_13"
            android:textColor="@color/dark_gray"
            android:background="@drawable/btn_gray_bg_corner_shape"/>
        
        <Button 
            android:id="@+id/btn_immeditae_chat"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:text="取消订单"
            android:textSize="@dimen/my_order_class_font_size_13"
            android:textColor="@color/blue"
            android:background="@drawable/btn_blue_bg_corner_shape"/>
        
        <Button 
            android:id="@+id/btn_immediate_pay"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:text="取消订单"
            android:textSize="@dimen/my_order_class_font_size_13"
            android:textColor="@color/orange"
            android:background="@drawable/btn_orange_bg_corner_shape"/>
    </LinearLayout>

</LinearLayout>
